  PERCENTAGE
  FIXED_AMOUNT
}

model InventoryLog {
  id               BigInt    @id @default(autoincrement())
  product_id       BigInt
  variant_id       BigInt?
  supplier_id      BigInt
  change_quantity  Int
  reason           String?
  created_at       DateTime  @default(now())

  // Relations
  product          Product   @relation(fields: [product_id], references: [id])
  variant          ProductVariant? @relation(fields: [variant_id], references: [id])
  supplier         User      @relation(fields: [supplier_id], references: [id])

  @@index([product_id], name: "idx_product_inventory_log")
  @@index([variant_id], name: "idx_variant_inventory_log")
  @@index([supplier_id], name: "idx_supplier_inventory_log")
}